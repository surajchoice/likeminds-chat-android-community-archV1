<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="true"
        app:shimmer_auto_start="true"
        app:shimmer_clip_to_children="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cloudy_blue">

            <View
                android:id="@+id/chat_head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/background_shimmer_circle"
                app:layout_constraintBottom_toBottomOf="@+id/linear_layout1"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:id="@+id/linear_layout1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="52dp"
                android:background="@drawable/background_chat_bubble_other"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/chat_head"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:layout_width="67dp"
                    android:layout_height="13dp"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_shimmer_bubble_conversation" />

                <View
                    android:layout_width="223dp"
                    android:layout_height="13dp"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_shimmer_bubble_conversation" />

                <View
                    android:layout_width="183dp"
                    android:layout_height="13dp"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/background_shimmer_bubble_conversation" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/background_chat_bubble_me"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linear_layout1">

                <View
                    android:layout_width="144dp"
                    android:layout_height="13dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/background_shimmer_bubble_conversation" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="13dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="9dp"
                    android:background="@drawable/background_shimmer_bubble_conversation" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</layout>